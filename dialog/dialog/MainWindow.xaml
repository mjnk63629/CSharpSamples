<Window x:Name="Contacts" x:Class="dialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="listViewContacts" HorizontalAlignment="Left" Height="223" Margin="2,10,0,0" VerticalAlignment="Top" Width="478" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="buttonAddNewContact" Content="Add New Contact" Grid.Column="1" HorizontalAlignment="Left" Margin="2,248,0,0" VerticalAlignment="Top" Width="120" Click="buttonAddNewContact_Click"/>
    </Grid>
</Window>
