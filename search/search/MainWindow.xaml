<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:search"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="search.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="Grid_Loaded">
        <ListView x:Name="listViewFruits" HorizontalAlignment="Left" Height="236" Margin="10,75,0,0" VerticalAlignment="Top" Width="498">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="textBoxSearch" HorizontalAlignment="Left" Height="23" Margin="198,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" TextChanged="textBox_TextChanged"/>

        <telerik:Label x:Name="label" Content="Search:" HorizontalAlignment="Left" Margin="110,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.042,-2.03" FontWeight="Bold"/>

    </Grid>
</Window>
